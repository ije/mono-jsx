{
  "name": "@ije/mono-jsx",
  "version": "0.0.0-alpha.5",
  "exports": {
    ".": "./jsx.ts",
    "./jsx-runtime": "./jsx-runtime.ts",
    "./jsx-dev-runtime": "./jsx-runtime.ts"
  },
  "imports": {
    "mono-jsx": "./jsx.ts",
    "mono-jsx/jsx-runtime": "./jsx-runtime.ts"
  },
  "tasks": {
    "build": "deno run -A --no-lock build.ts",
    "test": "deno test -A --no-lock test/",
    "install-puppeteer": "PUPPETEER_PRODUCT=chrome deno run -A --no-lock https://deno.land/x/puppeteer@16.2.0/install.ts"
  },
  "fmt": {
    "lineWidth": 140
  },
  "lint": {
    "exclude": [
      "**/*.mjs"
    ],
    "rules": {
      "exclude": [
        "ban-types",
        "ban-ts-comment",
        "no-empty-interface",
        "no-explicit-any",
        "no-this-alias",
        "prefer-const",
        "verbatim-module-syntax"
      ]
    }
  }
}
