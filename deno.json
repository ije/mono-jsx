{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "mono-jsx"
  },
  "nodeModulesDir": "none",
  "imports": {
    "mono-jsx/jsx-runtime": "./jsx-runtime.ts"
  },
  "tasks": {
    "build": "deno run -A --no-lock build.ts",
    "test": "deno task build && deno test -A --no-lock test/"
  },
  "fmt": {
    "lineWidth": 140
  },
  "lint": {
    "exclude": [
      "**/*.mjs"
    ],
    "rules": {
      "exclude": [
        "ban-types",
        "ban-ts-comment",
        "no-empty-interface",
        "no-this-alias",
        "prefer-const",
        "no-slow-types"
      ]
    }
  }
}
